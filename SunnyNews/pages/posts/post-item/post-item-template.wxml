<template name="postItem">
  <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{author_img}}"></image>
        <text class="post-date" >{{date}}</text>
      </view>
      <text class="post-title">{{title}}</text>
      <image class="post-image" src="{{post_img}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../imgs/none-star.png"></image>
        <text class="post-like-font">{{like_num}}</text>
        <image class="post-like-image" src="../../imgs/chat1.png"></image>
        <text class="post-like-font" >{{comment_num}}</text>
      </view>
    </view>
</template>